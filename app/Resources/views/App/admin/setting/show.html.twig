{% extends 'App/layout/admin_base.html.twig' %}

{% block body %}
    <h1>Setting</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ setting.id }}</td>
            </tr>
            <tr>
                <th>Siteurl</th>
                <td>{{ setting.siteUrl }}</td>
            </tr>
            <tr>
                <th>Sitename</th>
                <td>{{ setting.siteName }}</td>
            </tr>
            <tr>
                <th>Siteemail</th>
                <td>{{ setting.siteEmail }}</td>
            </tr>
            <tr>
                <th>Footertext</th>
                <td>{{ setting.footerText }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_setting_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_setting_edit', { 'id': setting.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
