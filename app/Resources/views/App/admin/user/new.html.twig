
{% extends 'App/layout/inc/admin_box_layout.html.twig' %}



{% block title %}User Creation{% endblock %}

{% block form %}
    <!-- form start -->
    {{ form_start(form) }}
<div class="box-body">
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword.first, {'label': 'Password'}) }}
    {{ form_row(form.plainPassword.second, {'label': 'Repeat Password'}) }}

    <button type="submit" class="btn btn-primary btn-lg btn-block" formnovalidate>Create</button>

    {{ form_end(form) }}
</div>
{% endblock %}

{% block links %}
    <ul>
        <li>
            <a href="{{ path('admin_user_index') }}" class="btn btn-default btn-lg btn-block">Back to the user list</a>
        </li>
    </ul>
{% endblock %}
