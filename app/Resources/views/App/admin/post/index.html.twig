{% extends 'App/layout/admin_base.html.twig' %}

{% block body %}
    <h1>Posts list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Publishedat</th>
                <th>Slug</th>
                <th>Featuredimage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('admin_post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{% if post.publishedAt %}{{ post.publishedAt|date('Y-m-d') }}{% endif %}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.featuredImage }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_post_edit', { 'id': post.id }) }}" class="btn btn-primary">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_post_new') }}">Create a new post</a>
        </li>
    </ul>
{% endblock %}
