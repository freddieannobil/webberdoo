
{% extends 'App/layout/admin_base.html.twig' %}


{% block body %}
    <style>
        .dashboard{
            margin: 7em 0 0 0;
        }
    </style>
<div class="row">


    <div class="col-lg-12 col-md-12">
        <h2>Dashboard</h2>
    </div>

   <div class="dashboard">
       <div class="col-lg-3 col-xs-6">
           <!-- small box -->
           <div class="small-box bg-aqua">
               <div class="inner">
                   <h3>{{ category|length }}</h3>

                   <p>Categories</p>
               </div>
               <div class="icon">
                   <i class="fa fa-tags" aria-hidden="true"></i>

               </div>
           </div>
       </div>
       <!-- ./col -->
       <div class="col-lg-3 col-xs-6">
           <!-- small box -->
           <div class="small-box bg-green">
               <div class="inner">
                   <h3>{{ users|length }}</h3>

                   <p>Users</p>
               </div>
               <div class="icon">
                   <i class="fa fa-users" aria-hidden="true"></i>

               </div>
           </div>
       </div>
       <!-- ./col -->
       <div class="col-lg-3 col-xs-6">
           <!-- small box -->
           <div class="small-box bg-yellow">
               <div class="inner">
                   <h3>{{ videos|length }}</h3>

                   <p>Videos</p>
               </div>
               <div class="icon">
                   <i class="fa fa-film" aria-hidden="true"></i>

               </div>
           </div>
       </div>
       <!-- ./col -->
       <div class="col-lg-3 col-xs-6">
           <!-- small box -->
           <div class="small-box bg-red">
               <div class="inner">
                   <h3>{{ channels|length }}</h3>

                   <p>Channels</p>
               </div>
               <div class="icon">
                   <i class="fa fa-television" aria-hidden="true"></i>

               </div>
           </div>
       </div>
       <!-- ./col -->
   </div>
</div>
<!-- /.row -->
{% endblock %}

